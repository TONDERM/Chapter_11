@model SCP_Foundation.Models.SCP

@{
    ViewData["Title"] = "Create";
}

<h1 id="testE" style="background-color:rgba(120,130,150,.5); color:whitesmoke; text-shadow:black 3px 3px; border:grey 1px ridge;" class="text-center">Create New SCP File</h1>
<body id="MetalBG">


    <main class="container-fluid" style="color:black; background-color:rgba(255,255,255, .9); border:white 3px groove; border-radius:5px; box-shadow:8px 8px 6px rgba(0,0,0, .5);">
        <h4 id="testB" class="text-center pt-3">SCP Report Form</h4>
        <hr style="background-color:black;" />

        <form asp-action="Create">
            <div id="test" class="form-group row p-2" style="margin-left:5px; margin-bottom:.5%;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row" style="padding-bottom:10px;">
                    <label asp-for="ClassifiedId" class="control-label col-md-3" style="margin-right:-12.3%; font-weight:bold;">Classification:</label>
                    <select asp-for="ClassifiedId" class="form-control col-md-3 text-center" asp-items="ViewBag.ClassifiedId"> <option value="">Select Level</option></select>
                    <span asp-validation-for="ClassifiedId" class="text-danger"></span>
                </div>
                <div class="row" style="padding-bottom:10px;">
                    <label asp-for="IdNumber" class="control-label col-md-2" style="margin-right:-4%; font-weight:bold;">ID Number:</label>
                    <input asp-for="IdNumber" class="form-control col-md-2" />
                    <span asp-validation-for="IdNumber" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="Name" class="control-label col-md-2" style="margin-right:-4%; font-weight:bold;">Name:</label>
                    <input asp-for="Name" class="form-control col-md-5" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div id="test" class="form-group row pt-2 text-center" style="justify-content:center; background-color:aliceblue; border:1px black solid; margin-left:5px; margin-right:5px;">
                <div class="form-group col-md-3 mr-5">
                    <label asp-for="ContainId" style="font-weight:bold;" class="control-label"></label>
                    <select asp-for="ContainId" class="form-control text-center" asp-items="ViewBag.ContainId"> <option value="">Select Class</option></select>
                    <span asp-validation-for="ContainId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="RiskId" style="font-weight:bold;" class="control-label "></label>
                    <select asp-for="RiskId" class="form-control text-center" asp-items="ViewBag.RiskId"><option value="">Select Class</option></select>
                    <span asp-validation-for="RiskId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3 ml-5">
                    <label asp-for="DisruptionId" style="font-weight:bold;" class="control-label"></label>
                    <select asp-for="DisruptionId" class="form-control text-center" asp-items="ViewBag.DisruptionId"><option value="">Select Class</option></select>
                    <span asp-validation-for="DisruptionId" class="text-danger"></span>
                </div>
            </div>

            <div id="test" class="row " style="background-color:azure; border:1px black solid; border:1px black solid; margin-left:5px; margin-right:5px;">
                <div class="form-group col-md-12 pt-2">
                    <label asp-for="ContainmentProcedure" style="font-weight:bold;" class="control-label"></label>
                    <textarea asp-for="ContainmentProcedure" class="form-control" rows="5" type="text" style="min-height:130px;"></textarea>
                    <span asp-validation-for="ContainmentProcedure" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Description" style="font-weight:bold;" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" type="text" style="min-height:130px;"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pt-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
        <div style="padding-bottom:2px; margin-top:-.5%;">
            <a asp-action="Index">Back to List</a>
        </div>
    </main>
    <div class="form-group p-2 disabled">
        <input type="color" style="opacity:0;" />
    </div>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
